@model IEnumerable<Biblioteka.Models.LsitaKlientow>

<h1>Lista Klientów</h1>

<a asp-controller="Klienci" asp-action="Dodaj" class="btn btn-primary">Dodaj</a> <!-- Przycisk "Dodaj" -->

<table class="table">
    <thead>
        <tr>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Telefon</th>
            <th>Email</th>
            <th>Wypożyczone</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var klient in Model)
        {
            <tr>
                <td>@klient.Imie</td>
                <td>@klient.Nazwisko</td>
                <td>@klient.Telefon</td>
                <td>@klient.Email</td>
                <td>@klient.Wypozyczone</td>
                <td>
                    <a asp-action="Usun" asp-route-id="@klient.Id" class="btn btn-danger">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>