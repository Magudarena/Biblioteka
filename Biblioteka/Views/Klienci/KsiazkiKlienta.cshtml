@model IEnumerable<Biblioteka.Models.KsiazkaPerKlient>

<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
<style>
    body, h1, h2, h3, h4, h5 {
        font-family: "Raleway", sans-serif
    }

    .my-div {
        margin-bottom: 10px;
    }
</style>


<table class="table">
    <thead>
        <tr>
            <th>Nr Biblioteczny</th>
            <th>Tytuł</th>
            <th>Autor</th>
            <th>ISBN</th>
            <th>Data Wypożyczenia</th>
            <th>Data Zwrotu</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">
                @TempData["Message"]
            </div>
        }
        @foreach (var ksiazka in Model)
        {
            <tr style="@(ksiazka.Data_Zwrotu != null ? "background-color: #d4edda;" : "")">
                <td>@ksiazka.Nr_Biblioteczny</td>
                <td>@ksiazka.Tytul</td>
                <td>@ksiazka.Autor</td>
                <td>@ksiazka.ISBN</td>
                <td>@ksiazka.Data_Wypozyczenia?.ToString("yyyy-MM-dd")</td>
                <td>@ksiazka.Data_Zwrotu?.ToString("yyyy-MM-dd")</td>
                <td>
                    @if (ksiazka.Data_Zwrotu == null)
                    {

                        <form method="post" action="@Url.Action("Zwroc", "Ksiazki", new { id = ksiazka.Id_Wypozyczenia })">
                            <button type="submit" class="btn btn-warning">Zwróć</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>