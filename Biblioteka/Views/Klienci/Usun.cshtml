@model Biblioteka.Models.Klient

<h2>Usuń klienta</h2>

<p>Czy na pewno chcesz usunąć klienta <strong>@Model.Imie @Model.Nazwisko</strong>?</p>

<form asp-action="UsunPotwierdzenie" asp-controller="Klienci" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Usuń</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>