@model Biblioteka.Models.KsiazkaPerKlient

<form asp-action="PrzekierujDoZwrotu" method="post" class="mt-4">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
    <style>
        body, h1, h2, h3, h4, h5 {
            font-family: "Raleway", sans-serif;
        }

        .my-div {
            margin-bottom: 10px;
        }
    </style>

    <div asp-validation-summary="All" class="text-danger"></div>

    <h3>Oddawana książka</h3>
    <div class="form-group">
        <label for="NrBiblioteczny">Numer biblioteczny książki</label>
        <input name="nrBiblioteczny" id="NrBiblioteczny" class="form-control" placeholder="Wprowadź numer biblioteczny" required />
        <span asp-validation-for="Nr_Biblioteczny" class="text-danger"></span>
    </div>

    <br />

    <div class="my-div">
        <button type="submit" class="btn btn-primary">Zwróć</button>
        <button type="reset" class="btn btn-secondary">Wyczyść</button>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="alert alert-danger">@ViewData["Message"]</div>
    }
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}